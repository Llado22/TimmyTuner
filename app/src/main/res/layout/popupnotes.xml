<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bck_pop"
    android:theme="@style/AppTheme.CostumeTheme">

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="16dp"
        android:text="Select note" />

    <Button
        android:id="@+id/btn_mas"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_octave_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:text="+"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_menos"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_octave_label"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="-"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/oct_view"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_below="@+id/select_octave_label"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/btn_menos"
        android:layout_toLeftOf="@+id/btn_menos"
        android:layout_toEndOf="@+id/btn_mas"
        android:layout_toRightOf="@+id/btn_mas"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/select_note_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="SELECT NOTE"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="SELECT NOTE" />

    <TextView
        android:id="@+id/select_octave_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="OCTAVE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selected_note_label"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_save"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="48dp"
        android:layout_toStartOf="@+id/selected_note_view"
        android:layout_toLeftOf="@+id/selected_note_view"
        android:text="Selected Note:" />

    <TextView
        android:id="@+id/selected_note_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_save"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="48dp"
        android:text="D2" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/select_note_label"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/list"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>